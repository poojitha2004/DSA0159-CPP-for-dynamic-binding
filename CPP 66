#include <iostream>
#include <vector>
using namespace std;

class Matrix {
private:
    vector<vector<int>> mat;
    int rows;
    int cols;

public:
    // Constructor to initialize matrix with given rows and columns
    Matrix(int r, int c) : rows(r), cols(c) {
        mat.resize(rows, vector<int>(cols, 0));
    }

    // Method to set a value in the matrix
    void setValue(int r, int c, int value) {
        if (r >= 0 && r < rows && c >= 0 && c < cols) {
            mat[r][c] = value;
        }
    }

    // Overload the * operator for matrix multiplication
    Matrix operator*(const Matrix& other) const {
        if (cols != other.rows) {
            throw invalid_argument("Matrices cannot be multiplied: number of columns in first matrix must be equal to number of rows in second matrix.");
        }

        Matrix result(rows, other.cols);

        for (int i = 0; i < rows; ++i) {
            for (int j = 0; j < other.cols; ++j) {
                result.mat[i][j] = 0;
                for (int k = 0; k < cols; ++k) {
                    result.mat[i][j] += mat[i][k] * other.mat[k][j];
                }
            }
        }

        return result;
    }

    // Method to display the matrix
    void display() const {
        for (const auto& row : mat) {
            for (int value : row) {
                cout << value << " ";
            }
            cout << endl;
        }
    }
};

int main() {
    // Create and initialize two matrices
    Matrix mat1(2, 3);
    Matrix mat2(3, 2);

    // Set values for the first matrix
    mat1.setValue(0, 0, 1);
    mat1.setValue(0, 1, 2);
    mat1.setValue(0, 2, 3);
    mat1.setValue(1, 0, 4);
    mat1.setValue(1, 1, 5);
    mat1.setValue(1, 2, 6);

    // Set values for the second matrix
    mat2.setValue(0, 0, 7);
    mat2.setValue(0, 1, 8);
    mat2.setValue(1, 0, 9);
    mat2.setValue(1, 1, 10);
    mat2.setValue(2, 0, 11);
    mat2.setValue(2, 1, 12);

    // Multiply the two matrices using the overloaded * operator
    Matrix result = mat1 * mat2;

    // Display the result
    cout << "Matrix 1:" << endl;
    mat1.display();
    cout << "Matrix 2:" << endl;
    mat2.display();
    cout << "Result of multiplication:" << endl;
    result.display();

    return 0;
}
