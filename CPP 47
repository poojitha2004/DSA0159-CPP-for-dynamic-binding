#include <iostream>
using namespace std;

int main() {
    int n;

    cout << "Enter the size of the matrix (n x n): ";
    cin >> n;

    // Dynamically allocate memory for an n x n matrix
    int** matrix = new int*[n];
    for (int i = 0; i < n; ++i) {
        matrix[i] = new int[n];
    }

    // Input the matrix elements
    cout << "Enter the elements of the matrix:" << endl;
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            cout << "Element at [" << i << "][" << j << "]: ";
            cin >> matrix[i][j];
        }
    }

    int primaryDiagonalSum = 0;
    int secondaryDiagonalSum = 0;

    // Calculate the sum of the primary and secondary diagonals
    for (int i = 0; i < n; ++i) {
        primaryDiagonalSum += matrix[i][i];                  // Primary diagonal
        secondaryDiagonalSum += matrix[i][n - i - 1];        // Secondary diagonal
    }

    cout << "Sum of the primary diagonal: " << primaryDiagonalSum << endl;
    cout << "Sum of the secondary diagonal: " << secondaryDiagonalSum << endl;

    // Deallocate the memory
    for (int i = 0; i < n; ++i) {
        delete[] matrix[i];
    }
    delete[] matrix;

    return 0;
}
