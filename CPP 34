#include <iostream>
#include <iomanip>  // For std::setw

int main() {
    int n;

    std::cout << "Enter the number of rows for the diamond pattern (half the height): ";
    std::cin >> n;

    // Print the upper triangle
    for (int i = 1; i <= n; ++i) {
        // Print leading spaces
        std::cout << std::setw(n - i + 1);
        
        // Print stars
        for (int j = 1; j <= (2 * i - 1); ++j) {
            std::cout << "*";
        }
        std::cout << std::endl;  // Move to the next line
    }

    // Print the lower inverted triangle
    for (int i = n - 1; i >= 1; --i) {
        // Print leading spaces
        std::cout << std::setw(n - i + 1);
        
        // Print stars
        for (int j = 1; j <= (2 * i - 1); ++j) {
            std::cout << "*";
        }
        std::cout << std::endl;  // Move to the next line
    }

    return 0;
}
