#include <iostream>
using namespace std;

int main() {
    // Step 1: Declare an array of characters (a string)
    char str[] = "Hello, World!";

    // Step 2: Create a pointer to the array of characters
    char *ptr;

    // Step 3: Assign the address of the first element of the array to the pointer
    ptr = str;  // equivalent to ptr = &str[0];

    // Step 4: Display the value of the string using the pointer
    cout << "The string is: " << ptr << endl;

    return 0;
}
