#include <iostream>
#include <cstring>  // For strlen and strcpy
using namespace std;

// Function to concatenate two std::string objects
string concatenate(const string& str1, const string& str2) {
    return str1 + str2;
}

// Function to concatenate two character arrays
char* concatenate(const char* arr1, const char* arr2) {
    // Find the length of both character arrays
    size_t len1 = strlen(arr1);
    size_t len2 = strlen(arr2);
    
    // Allocate memory for the concatenated result
    char* result = new char[len1 + len2 + 1]; // +1 for null terminator
    
    // Copy first array into result
    strcpy(result, arr1);
    // Append second array to result
    strcat(result, arr2);
    
    return result;
}

int main() {
    // Test concatenation of std::string
    string str1 = "Hello, ";
    string str2 = "World!";
    cout << "Concatenated std::string: " << concatenate(str1, str2) << endl;

    // Test concatenation of character arrays
    const char* arr1 = "Hello, ";
    const char* arr2 = "World!";
    char* concatenatedArr = concatenate(arr1, arr2);
    cout << "Concatenated char arrays: " << concatenatedArr << endl;
    
    // Free the allocated memory for the concatenated character array
    delete[] concatenatedArr;

    return 0;
}
