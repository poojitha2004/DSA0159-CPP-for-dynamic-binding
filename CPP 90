#include <iostream>
using namespace std;

int main() {
    // Step 1: Declare an array of elements
    int array[] = {10, 20, 30, 40, 50};

    // Step 2: Create a pointer to the array
    int *ptr;

    // Step 3: Assign the address of the first element of the array to the pointer
    ptr = array;  // equivalent to ptr = &array[0];

    // Step 4: Display the values of the array elements using the pointer
    cout << "The elements of the array are:" << endl;
    for (int i = 0; i < 5; ++i) {
        cout << *(ptr + i) << " ";  // Dereference the pointer to get the value at each index
    }
    cout << endl;

    return 0;
}
