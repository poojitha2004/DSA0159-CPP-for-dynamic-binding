#include <iostream>
using namespace std;

int main() {
    // Step 1: Declare an integer variable
    int value = 42;

    // Step 2: Create a pointer to the integer variable
    int *ptr;

    // Step 3: Assign the address of the integer variable to the pointer
    ptr = &value;

    // Step 4: Display the value of the integer using the pointer
    cout << "The value of the integer is: " << *ptr << endl;
    
    return 0;
}
