#include <iostream>
using namespace std;

class Vector {
private:
    double x, y;

public:
    // Constructor
    Vector(double xVal = 0.0, double yVal = 0.0) : x(xVal), y(yVal) {}

    // Overload the += operator
    Vector& operator+=(const Vector& other) {
        x += other.x;
        y += other.y;
        return *this; // Return the current object to allow chaining
    }

    // Method to display the vector
    void display() const {
        cout << "Vector(" << x << ", " << y << ")" << endl;
    }
};

int main() {
    // Create two Vector objects
    Vector v1(3.0, 4.0);
    Vector v2(1.0, 2.0);

    // Use the overloaded += operator to add v2 to v1
    v1 += v2;

    // Display the result
    cout << "Result after v1 += v2:" << endl;
    v1.display();

    return 0;
}
