#include <iostream>
using namespace std;

int countOccurrences(int arr[], int size, int value) {
    int count = 0;
    for (int i = 0; i < size; ++i) {
        if (arr[i] == value) {
            ++count;
        }
    }
    return count;
}

int main() {
    int n;

    cout << "Enter the number of elements: ";
    cin >> n;

    if (n <= 0) {
        cout << "Array size must be positive." << endl;
        return 1;
    }

    int arr[n];
    cout << "Enter " << n << " elements: ";
    for (int i = 0; i < n; ++i) {
        cin >> arr[i];
    }

    int value;
    cout << "Enter the value to count: ";
    cin >> value;

    int occurrences = countOccurrences(arr, n, value);
    cout << "The value " << value << " occurs " << occurrences << " times in the array." << endl;

    return 0;
}
