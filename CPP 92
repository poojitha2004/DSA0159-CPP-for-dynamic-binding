#include <iostream>
using namespace std;

int main() {
    // Step 1: Declare an array of float values
    float array[] = {1.1f, 2.2f, 3.3f, 4.4f, 5.5f};

    // Step 2: Create a pointer to the array of float values
    float *ptr;

    // Step 3: Assign the address of the first element of the array to the pointer
    ptr = array;  // Equivalent to ptr = &array[0];

    // Step 4: Display the values of the array elements using the pointer
    cout << "The elements of the float array are:" << endl;
    for (int i = 0; i < 5; ++i) {
        cout << *(ptr + i) << " ";  // Dereference the pointer to get the value at each index
    }
    cout << endl;

    return 0;
}
