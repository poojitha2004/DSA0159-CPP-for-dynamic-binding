#include <iostream>
using namespace std;

// Function to calculate the sum of two matrices
void addMatrices(const int mat1[][3], const int mat2[][3], int result[][3], int rows, int cols) {
    for (int i = 0; i < rows; ++i) {
        for (int j = 0; j < cols; ++j) {
            result[i][j] = mat1[i][j] + mat2[i][j];
        }
    }
}

// Function to calculate the sum of two arrays
void addArrays(const int* arr1, const int* arr2, int* result, int size) {
    for (int i = 0; i < size; ++i) {
        result[i] = arr1[i] + arr2[i];
    }
}

int main() {
    // Test matrix addition
    const int rows = 2, cols = 3;
    int mat1[rows][cols] = { {1, 2, 3}, {4, 5, 6} };
    int mat2[rows][cols] = { {7, 8, 9}, {10, 11, 12} };
    int matResult[rows][cols];

    addMatrices(mat1, mat2, matResult, rows, cols);

    cout << "Sum of matrices:" << endl;
    for (int i = 0; i < rows; ++i) {
        for (int j = 0; j < cols; ++j) {
            cout << matResult[i][j] << " ";
        }
        cout << endl;
    }

    // Test array addition
    const int size = 4;
    int arr1[size] = {1, 2, 3, 4};
    int arr2[size] = {5, 6, 7, 8};
    int arrResult[size];

    addArrays(arr1, arr2, arrResult, size);

    cout << "Sum of arrays:" << endl;
    for (int i = 0; i < size; ++i) {
        cout << arrResult[i] << " ";
    }
    cout << endl;

    return 0;
}
