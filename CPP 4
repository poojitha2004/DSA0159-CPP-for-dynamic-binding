#include <iostream>
#include <climits> 
void findMinMax(const int arr[], int size, int &min, int &max) {
    min = INT_MAX;
    max = INT_MIN;
    for (int i = 0; i < size; ++i) {
        if (arr[i] < min) {
            min = arr[i];
        }
        if (arr[i] > max) {
            max = arr[i];
        }
    }
}
int main() {
    const int size = 5; 
    int arr[size] = {3, 5, 7, 2, 8}; 
    int min, max;
    findMinMax(arr, size, min, max);
    std::cout << "Minimum element: " << min << std::endl;
    std::cout << "Maximum element: " << max << std::endl;
    return 0;
}
