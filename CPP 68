#include <iostream>
#include <stdexcept>
using namespace std;

class Calculator {
public:
    // Overload the () operator to perform calculations
    double operator()(double a, double b, char op) const {
        switch (op) {
            case '+':
                return a + b;
            case '-':
                return a - b;
            case '*':
                return a * b;
            case '/':
                if (b == 0) {
                    throw invalid_argument("Division by zero is not allowed.");
                }
                return a / b;
            default:
                throw invalid_argument("Invalid operator. Use +, -, *, or /.");
        }
    }
};

int main() {
    Calculator calc;

    try {
        double a = 10.0;
        double b = 5.0;
        char op;

        cout << "Enter operation (+, -, *, /): ";
        cin >> op;

        double result = calc(a, b, op); // Call the overloaded () operator
        cout << "Result: " << result << endl;
    } catch (const exception& e) {
        // Handle exceptions
        cout << "Exception: " << e.what() << endl;
    }

    return 0;
}
