#include <iostream>
using namespace std;

class Counter {
private:
    int value;

public:
    // Constructor
    Counter(int initialValue) : value(initialValue) {}

    // Overload the prefix ++ operator (e.g., ++counter)
    Counter& operator++() {
        ++value;  // Increment the value
        return *this;  // Return the current object
    }

    // Overload the postfix ++ operator (e.g., counter++)
    Counter operator++(int) {
        Counter temp = *this;  // Save the current state
        ++value;  // Increment the value
        return temp;  // Return the saved state
    }

    // Method to display the value
    void display() const {
        cout << "Counter Value: " << value << endl;
    }
};

int main() {
    // Create a Counter object
    Counter counter(5);

    // Display the initial value
    counter.display();

    // Use the prefix ++ operator
    ++counter;
    cout << "After prefix ++: ";
    counter.display();

    // Use the postfix ++ operator
    counter++;
    cout << "After postfix ++: ";
    counter.display();

    return 0;
}
