#include <iostream>
#include <string>

class Book {
private:
    std::string title;
    std::string author;
    double price;

public:
    // Constructor to initialize the book's data members
    Book(const std::string& t, const std::string& a, double p) : title(t), author(a), price(p) {
        std::cout << "Book constructor called for: " << title << std::endl;
    }

    // Destructor
    ~Book() {
        std::cout << "Book destructor called for: " << title << std::endl;
    }

    // Function to display book information
    void display() const {
        std::cout << "Title: " << title << std::endl;
        std::cout << "Author: " << author << std::endl;
        std::cout << "Price: $" << price << std::endl;
    }
};

int main() {
    // Create a Book object
    Book myBook("The Great Gatsby", "F. Scott Fitzgerald", 10.99);

    // Display book information
    myBook.display();

    // Destructor will be automatically called when myBook goes out of scope
    return 0;
}
